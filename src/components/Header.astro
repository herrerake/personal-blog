---
import HeaderLink from "./HeaderLink.astro";
import CardWrapper from "./CardWrapper.astro";
import ThemeToggle from "./ThemeToggle.astro";

const otrLink = import.meta.env.DEV ? "/otr/" : "https://otr.herrerake.com";

const links = [
  {
    name: "Home",
    location: "/",
  },
  {
    name: "About me",
    location: "/about",
  },
  {
    name: "Portfolio",
    location: "/portfolio",
  },
  {
    name: "Blog",
    location: "/blog",
  },
  {
    name: "OTR",
    location: otrLink,
  },
];
---

<header class="my-4 w-full">
  <CardWrapper class="w-full">
    <nav class="flex flex-col md:flex-row items-center justify-between">
      <h2>
        <a href="/">
          <img
            src="/branding/herrerake-logo-oleo-script-swash-caps-black.png"
            loading="lazy"
            width="156"
            alt="Herrerake Logo"
            class="h-6 w-auto dark:invert dark:brightness-200"
          /></a
        >
      </h2>
      <div class="flex items-center space-x-4 sm:space-x-8 mt-4 md:mt-1">
        {
          links.map((link) => (
            <HeaderLink href={link.location}>
              {link.name}
            </HeaderLink>
          ))
        }
        <ThemeToggle />
      </div>
    </nav>
  </CardWrapper>
</header>
<style>
  h2 {
    margin: 0;
    font-size: 1em;
  }
  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav a {
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    /* border-bottom-color: var(--accent); */
  }
</style>
