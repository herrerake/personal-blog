---
import CardWrapper from "./CardWrapper.astro";
---

<div class="w-full h-full">
  <CardWrapper
    class="flex flex-col justify-center items-center text-center h-full"
  >
    <img
      src="/branding/herrerake-square-logo.png"
      loading="lazy"
      width="100"
      alt="Kevin Herrera headshot"
      class="h-28 w-auto dark:invert dark:brightness-200"
    />
    <div class="mt-2">
      <h2 class="text-[40px] leading-[56px] font-bold dark:text-darkText">
        Let's build your next AI agent.
      </h2>
      <div class="mt-4">
        <a
          href="https://calendly.com/kevin-herrerake/30min"
          target="_blank"
          rel="noreferrer noopener"
          class="text-center py-3 rounded-lg bg-bluePrimary text-white text-xl font-medium flex items-center justify-center space-x-1 dark:bg-darkAccent dark:text-darkBg"
          >Book a Call</a
        >
      </div>
    </div>
  </CardWrapper>
</div>
