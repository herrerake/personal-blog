---
import HeaderLink from "@/components/HeaderLink.astro";
import CardWrapper from "@/components/CardWrapper.astro";
import ThemeToggle from "@/components/ThemeToggle.astro";

const mainSiteLink = import.meta.env.DEV ? "/" : "https://herrerake.com";

const links = [
  { name: "OTR", location: import.meta.env.DEV ? "/otr/" : "/" },
  { name: "herrerake.com", location: mainSiteLink },
];
---

<header class="my-4 w-full">
  <CardWrapper class="w-full">
    <nav class="flex flex-col md:flex-row items-center justify-between">
      <h2>
        <a href="/" class="flex items-center gap-2">
          <img
            src="/branding/herrerake-logo-oleo-script-swash-caps-black.png"
            loading="lazy"
            width="156"
            alt="Herrerake Logo"
            class="h-6 w-auto dark:invert dark:brightness-200"
          />
          <span class="text-sm font-bold text-bluePrimary dark:text-darkAccent uppercase tracking-wider">OTR</span>
        </a>
      </h2>
      <div class="flex items-center space-x-4 sm:space-x-8 mt-4 md:mt-1">
        {links.map((link) => (
          <HeaderLink href={link.location}>
            {link.name}
          </HeaderLink>
        ))}
        <ThemeToggle />
      </div>
    </nav>
  </CardWrapper>
</header>
<style>
  h2 {
    margin: 0;
    font-size: 1em;
  }
  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav a {
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
</style>
