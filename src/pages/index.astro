<style>
  body {
    color: #042c55;
    background-color: #fff;
  }

  .card {
    display: flex;
    padding: 40px 48px;
    flex-direction: column;
    align-items: flex-start;
    grid-column-gap: 32px;
    grid-row-gap: 32px;
    border-radius: 24px;
    background-color: #f5f5f5;
    border: 1px solid #eaecf0;
  }

  .card-content {
    display: flex;
    margin-bottom: 32px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    grid-column-gap: 12px;
    grid-row-gap: 12px;
  }

  .stacked-card-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: stretch;
    grid-column-gap: 32px;
    grid-row-gap: 32px;
  }

  .stacked-card {
    display: flex;
    padding: 20px 42px;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    grid-column-gap: 2px;
    grid-row-gap: 2px;
    border-radius: 24px;
    background-color: #f5f5f5;
    border: 1px solid #eaecf0;
  }

  .contact-card {
    display: flex;
    padding: 48px;
    flex-direction: column;
    justify-content: space-between;
    align-items: stretch;
    grid-column-gap: 32px;
    grid-row-gap: 32px;
    border-radius: 24px;
    background-color: #f5f5f5;
    border: 1px solid #eaecf0;
    text-align: center;
  }

  .news-ticker-container {
    padding: 18px 32px;
    border-radius: 24px;
    background-color: #f5f5f5;
    border: 1px solid #eaecf0;
  }

  .button {
    padding: 24px 32px;
    border-radius: 99px;
    background-color: #042c55;
    transition: background-color 300ms ease-out;
    line-height: 48px;
    font-weight: 500;
    text-align: center;
    letter-spacing: -0.01em;
  }

  .button:hover {
    background-color: #688099;
  }

  .button > a {
    color: white;
  }

  .cloudflare-orange {
    color: #ff6532;
  }

  .cloudflare-orange > a {
    color: #ff6532;
  }

  .cloudflare-orange > a:hover {
    text-decoration: underline;
  }

  .detail-button {
    display: flex;
    overflow: hidden;
    width: 80px;
    height: 80px;
    padding: 16px;
    justify-content: center;
    align-items: center;
    flex: 0 0 auto;
    border-radius: 100%;
    background-color: #fff;
    color: #131315;
  }

  .icon {
    display: flex;
    width: 48px;
    height: 48px;
    justify-content: center;
    align-items: center;
  }
</style>

