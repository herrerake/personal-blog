---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-gray-100">
    <Header title={SITE_TITLE} />
    <div
      class="bg-cover bg-center h-60 md:h-80"
      style="background-image: url('https://via.placeholder.com/1600x400');"
    >
      <div class="flex items-center justify-center h-full">
        <h1 class="text-4xl md:text-5xl text-white font-bold text-center">
          Welcome to the Blog
        </h1>
      </div>
    </div>
    <div class="container mx-auto py-8">
      <h1 class="text-3xl font-semibold mb-6">Latest Articles</h1>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Replace these placeholders with your actual articles -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <img
            src="https://via.placeholder.com/400x200"
            alt="Article Image"
            class="w-full h-40 object-cover"
          />
          <div class="p-4">
            <h2 class="text-xl font-semibold mb-2">Article Title</h2>
            <p class="text-sm text-gray-600 mb-4">
              Tags: <span class="text-blue-500">#Tech</span>, <span
                class="text-blue-500">#WebDev</span
              >
            </p>
            <p class="text-sm leading-relaxed">
              Description of the article. This could be a brief summary or
              excerpt.
            </p>
          </div>
        </div>
        <!-- Repeat the above structure for each article -->
      </div>
    </div>
    <Footer />
  </body>
</html>
